pipeline {
    agent any

    options {
          timeout(time: 240, unit: 'MINUTES')
    }

    stages {
        stage('Checkout') {
            steps {
               checkout scm
            }
        }
		stage('Build and push containers') {
			steps {
			    sh "go install github.com/magefile/mage@latest"
				sh "mage -v images"
			}
		}
    }
}
